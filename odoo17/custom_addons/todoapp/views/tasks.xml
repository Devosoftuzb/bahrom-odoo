<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_todo_task_tree" model="ir.ui.view">
        <field name="name">todo.task.tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="color" widget='color' />
                <field name="status" />

                <button name="action_completed" type="object" icon="fa-check" string="Completed" class="btn btn-primary" />
                <button name="action_not_completed" type="object" icon="fa-times" string="Not completed" class="btn btn-danger" />
            </tree>
        </field>
    </record>

    <record id="view_todo_task_calendar" model="ir.ui.view">
        <field name="name">todo.task.calendar</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <calendar string="Tasks" date_start="start_date" date_stop="end_date">
                <field name="name" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="color" invisible="1"/>
<!--                <field name="color" widget="color" options="{'color_field': 'color'}"/>-->
<!--                <field name="color" type="char" invisible="1"/>-->
            </calendar>
        </field>
    </record>

    <record id="view_todo_task_kanban" model="ir.ui.view">
        <field name="name">todo.task.kanban</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="categories_ids" on_create="quick_create">
                <template>
                    <field name="tags_ids" />
                    <field name="assignment_members_ids" />
                    <t t-name="kanban-box">
                        <div t-attf-style="background-color: #{record.color.raw_value};" class="o_kanban_card">
                            <div class="oe_kanban_record_title">
                                <strong class="o_kanban_record_title">
                                    <field name="name" />
                                </strong>

                                <div>
                                    <field name="assignment_members_ids" widget="many2many_tags" />
                                </div>

                                <div class="o_kanban_details">
                                    <field name="color" widget="color" />
                                </div>
                            </div>
                        </div>
                    </t>
                </template>
                <field name="color"/>
            </kanban>
        </field>
    </record>

    <record id="view_todo_task_form" model="ir.ui.view">
        <field name="name">todo.task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Completed" bg_color="bg-success" invisible="status != 'completed'" />

                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>

                    <group>
                        <field name="status" />
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="color" widget='color' />
                        <field name="assignment_members_ids" widget="many2many_tags" />
                    </group>

                    <notebook>
                        <page string="Additional">
                            <group>
                                <field name="categories_ids" options="{'color_field': 'color'}" />
                                <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                                <field name="notes" />
                            </group>
                        </page>

                        <page string="Map">
                            <group>
                                <!-- Your other fields -->
                                <field name="location_latitude" invisible="1"/>
                                <field name="location_longitude" invisible="1"/>

                                <!-- Map Field -->
                                <field name="location_latitude" widget="map_widget"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" options="{'post_refresh': 'recipients'}" />
                </div>
            </form>
        </field>
    </record>

    <record id="action_todo_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">tree,calendar,kanban,form</field>
    </record>
</odoo>