<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="post_promo_code_form_view" model="ir.ui.view">
            <field name="name">post.promo.code.form</field>
            <field name="model">post.promo.code</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <div class="oe_title">
                            <label for="code"/>
                            <h1>
                                <field name="code" placeholder="Enter ..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="create_date"/>
                            </group>
                            <group>
                                <field name="availability"/>
                            </group>
                            <group>
                                <field name="type" />
                            </group>
                            <div>
                                <group>
                                    <field name="fixed_price" invisible="type != 'fixed'" />
                                    <field name="percentage" invisible="type != 'percentage'" />
                                </group>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="post_promo_code_tree_view" model="ir.ui.view">
            <field name="name">post.promo.code.tree</field>
            <field name="model">post.promo.code</field>
            <field name="arch" type="xml">
                <tree string="Promo Codes Tree View">
                    <field name="create_date"/>
                    <field name="availability"/>
                    <field name="type" />
                    <field name="fixed_price"/>
                    <field name="percentage"/>
                </tree>
            </field>
        </record>

        <record id="post_promo_code_act_window" model="ir.actions.act_window">
            <field name="name">Promo Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">post.promo.code</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no promo codes click here to add new promo code.
                </p>
            </field>
        </record>

        <menuitem name="Promo Codes" id="post_promo_code_menu" parent="post_root_menu" action="post_promo_code_act_window"/>

    </data>
</odoo>